# managed by chef, changes will be overwritten
check process <%= @service_name %>
  matching "^java.* <%= @main_class %> "
  every 1 cycles
  start program "<%= @runner_script %>"
    as uid <%= @user %> as gid <%= @user %>
  stop program "/usr/bin/pkill -u <%= @user %> -f '^java.* <%= @main_class %>'"
    as uid <%= @user %> as gid <%= @user %>
